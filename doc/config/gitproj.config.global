# ~/.gitproj.config.global

[gitproj "config"]
	ver = 1.1
	syslog = yes
	facility = user
	bin = /usr/lib/git-core
	# bin = $(git --exec-path)
	doc = /usr/share/doc/git-proj
	test = /usr/share/doc/git-proj/test
	gitproj-status = not-set-up
	name = TBD
	top-dir = TBD
	hardlink = no
	remote-raw-url = TBD
	local-raw-dir = ..
	local-raw-symlink = raw
[gitproj "hook"]
	source = hooks/pre-commit
	pre-commit-enabled = yes
	check-file-names = yes
	check-for-big-files = yes
	binary-file-size-limit = 1k
