# "git proj init local" will setup this file
# Copy this file to gitproj/config.$HOSTNAME
# Then put this in .git/config
#[include]
#	path = ../gitproj/config.$HOSTNAME
	
[gitproj "project"]
	# States: not-setup, setup-err, config-err, OK
	gitproj-status = not-set-up
	# origin-url with path and .git removed
	name = TBD
	# git rev-parse --show-toplevel
	top-dir = TBD
	# If $t = $r, then set hardlink to yes
	# t=$(df -BM top-dir --output=source | tail -n 1)
	# r=$(df -BM raw-dir --output=source | tail -n 1)
	hardlink = no

	# Local mount examples
	raw-url = /MOUNT-DIR/DIR/NAME.raw
	#remote.origin.url = /MOUNT-DIR/DIR/NAME.git

	# Remote examples
	#raw-url = joe@example.com:/repo/git/video-2021-09-24/NAME.raw
	#remote.origin-url=USER@example.com:/repo/git/video-2021-09-24/NAME.git
	#remote.origin-url=git@github.com:TurtleEngr/gitproj.git
[gitproj "config"]
	# If no ~ or /, this is relative to top-dir, create: dir/Name.raw
	# This should not be in a git dir.
	raw-dir = ..
	# Relative to top-dir; create: ln -s dir/Name.raw symlink
	# This should be in a git dir.
	raw-symlink = raw
[gitproj "hook"]
	pre-commit-enabled = yes
	check-file-names = yes
	check-for-big-files = yes
	# Bytes, or use K, M, G
	binary-file-size-limit = 2M
