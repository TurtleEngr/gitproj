# .gitproj.config.$HOSTNAME

[include]
	path = .gitproj.config.local

[gitproj "config"]
	proj-status = not-set-up
	proj-name = TBD
	hard-link = no
	remote-raw-url = /MOUNT-DIR/DIR/NAME.raw
	local-top-dir = TBD
	local-raw-dir = ..
	local-raw-sym-link = raw
[gitproj "hook"]
	pre-commit-enabled = yes
	check-file-names = yes
	check-for-big-files = yes
	binary-file-size-limit = 2M
