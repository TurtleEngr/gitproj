# Put this in your top git dir: .gitproj.config.local
# This file should be versioned.
# This file will be included by .gitproj.config.$HOSTNAME
# From: /usr/share/doc/gitproj/config/gitproj.config.local

[gitproj "config"]
	local-status = not-defined
	remote-status = not-defined
	proj-name = TBD
	local-top-dir = TBD
	git-flow-pkg = TBD
	remote-min-size = 20g
[gitproj "hook"]
	pre-commit-enabled = true
	check-file-names = true
	check-for-big-files = true
	binary-file-size-limit = 2M
	auto-move = true
